<!DOCTYPE html>
<html>
  <head>
    <title>WEProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <nav class="navbar navbar-custom">
    <div class="container-fluid ">
      <div class="navbar-header">
        <%= link_to "Amigo Code", root_path, class: "navbar-brand"%>
      </div>
      <form class="navbar-form navbar-left" action="/action_page.php">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search" name="search">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </div>
        </div>
      </form>
      <ul class="nav navbar-nav navbar-right ">
          <li><%= link_to "Create New Idea", new_idea_path, class: "black-text"%>
          <% if current_user %>
            <li><a class= "black-text"> <%= current_user.display_name %></a></li>
            <li><a href="/sessions/destroy" class= "black-text"><span class="glyphicon glyphicon-log-out black-text"></span> Logout </a></li>

          <% else %>
            <li><a href="/users/new" class= "black-text"><span class="glyphicon glyphicon-user black-text"></span> Sign Up</a></li>
            <li><a href="/sessions/new" class="black-text"><span class="glyphicon glyphicon-log-in black-text"></span> Login</a></li>
          <% end %>
      </ul>
    </div>
  </nav>
    <%= yield %>
    <div class="footer">
  <p>© Copyright 2018 Terms and Conditions apply <br>
  Amigo Code ®</p>
</div>
  </body>
</html>
