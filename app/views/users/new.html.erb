<h1 class="title"> Sign up now for free</h1>
<%= form_with scope: :user, url: users_path, local: true do |form| %>
<div class="userbox">
  <div class="furtherbox">
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@user.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
<p>
  <%= form.label :display_name %><br>
  <%= form.text_field :display_name %>
</p>
<p>
  <%= form.label :user_name %><br>
  <%= form.text_field :user_name %>
</p>
<p>
  <%= form.label :password %><br>
  <%= form.text_field :password, id: "myInput", type: 'password'%>
</p>
<input type="checkbox" onclick="myFunction()" ><strong> Show Password</strong>

<script>
function myFunction() {
    var x = document.getElementById("myInput");
    if (x.type === "password") {
        x.type = "text";
    } else {
        x.type = "password";
    }
}
</script>

<p>
  <%= form.submit %>
</p>
</div>
</div>
<% end %>
