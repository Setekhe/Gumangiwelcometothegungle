<h1> New Learning Idea </h1>
<%= form_with scope: :idea, url: ideas_path, local: true do |form| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@idea.errors.count, "error") %> prohibited
        this idea from being saved:
      </h2>
      <ul>
        <% @idea.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :idea_title, "Idea" %><br>
    <%= form.text_field :idea_title, class: "form-control" %>
  </p>

  <p>
    <%= form.label :details %><br>
    <%= form.text_area :details, class: "form-control" %>
  </p>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name, class: "form-control", value: current_user.display_name, readonly: true %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
